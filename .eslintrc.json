{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true        
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": ["**/*.test.js", "**/*.test.jsx"],
            "env": {
                "jest": true
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "no-undef": "off"
    }
}
